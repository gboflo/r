<?xml version="1.0" encoding="UTF-8"?>
<resourceDriver>
    <manifestVersion>1.4</manifestVersion>  
    <version>1.0.0</version>  
    <vendor>Spirent</vendor>
    <supportCustomArguments>true</supportCustomArguments>
    <language>itest</language>  
    <interface>Orchestration</interface>
    <entryPoint>aws-1.0.0.fftc</entryPoint>
    <resourceProperties>
        <property>
            <name>Image_ID</name>
            <description>The ID of the AWS AMI</description>
        </property>
        <property>
            <name>Instance_Type</name>
            <description>The AWS instance type.</description>
        </property>
        <property>
            <name>SSH_Key_Name</name>
            <description>The name of the key pair.</description>
        </property>
        <property>
            <name>Associate_Public_IP</name>
            <description>(Boolean) If specified a public IP address will be assigned to the new instance in a VPC</description>
        </property>        
        <property optional="true">
            <name>Instance_ID</name>
            <description>The ID of the instance. </description>
        </property>
        <property optional="true">
            <name>AWS_Region_Name</name>
            <description>The AWS Region</description>
        </property>
        <property optional="true">
            <name>AWS_Access_Key_ID</name>
            <description>The AWS Access Key</description>
        </property>
        <property optional="true">
            <name>AWS_Secret_Access_Key</name>
            <description>The AWS Secret Access Key</description>
        </property>
        <property optional="true">
            <name>Public_IP_Address</name>
            <description>The AWS instance public IpAddress</description>
        </property>
        <property optional="true">
            <name>Private_IP_Address</name>
            <description>The AWS instance private IpAddress</description>
        </property>          
    </resourceProperties>
    <portTemplate></portTemplate>
    <initializationOrder>init/setconfig</initializationOrder>
    <timeout>1800</timeout>
</resourceDriver>